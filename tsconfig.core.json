{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "src",
    "target": "es5",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "inlineSources": true,
    "sourceMap": true
  },
  "include": ["src/@oneserve-cordova-plugins/core/**/*.ts"],
  "exclude": ["node_modules", "src/@oneserve-cordova-plugins/core/**/*.spec.ts"]
}
