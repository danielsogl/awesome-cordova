{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@oneserve-cordova-plugins/core": ["./dist/@oneserve-cordova-plugins/core"]
    },
    "outDir": "./dist",
    "rootDir": "src",
    "target": "es5",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "inlineSources": true,
    "inlineSourceMap": true
  },
  "include": ["src/@oneserve-cordova-plugins/plugins/**/*.ts"],
  "angularCompilerOptions": {
    "genDir": "aot"
  }
}
